AAC()

?loc = rocky & summon.count = 0
  fire_summ()
:? summon.count = 0
  aether_summ()

?loc = temple & summon.count = 1
  ?foe = nagaraja
      activate potion
      equip ice crossbow
  :?foe = acronian
    mask_use()
    bardiche_use()
    ?bar_on_cd()
      equipL @icesword1@
      equipR @icesword2@
  :?foe.GetCount(15) >= 3
    equipL @icewand1@
    equipR @icewand2@
  :?foe ! boss & armor > 40
    equipL @icesword1@
    equipR @icesword2@
  :
    equipL @icesword1@
    equipR ice shield

?loc = ridge & summon.count = 1
  ?foe = yeti
    ?foe.armor > 0
      bardiche_use()
    ?foe.state = 132
      activate potion
    :?bar_on_cd()
      equip fire crossbow
  :?foe.GetCount(15) >= 3
    equipL @icewand1@
    equipR @icewand2@
  :?foe = ice pillar
    equipL @firesword1@
    equipR @firesword2@
  :?foe = ice wall
    equip fire crossbow
  :?foe = giant
    ?foe.state = 2 & foe.time = 50
      equip mask
      activate R
    ?hp < maxhp
      equipL @vigorsword1@
      equipR @vigorsword2@
    :
      equipL @firesword1@
      equipR @firesword2@
  :
    equipL @firesword1@
    equipR fire shield

?loc = mine & summon.count = 1
  ?foe = guardian
    ?foe.state = 2
      activate potion
      equip aether crossbow
    :?foe.state = 33
      ?foe.distance <= 7
        bardiche_use()
      ?foe.armor > 1 & foe.distance <= 6
      ^& bar_on_cd()
        hammer_use()
      ?foe.distance < 19 & foe.distance > 10
      ^& foe.armor > 1
        equipL @aetherhammer1@
        equipR @aetherhammer2@
      ?foe.distance < 10 & foe.armor > 1
      ^& bar_on_cd() & ham_on_cd()
        equipL @aetherhammer1@
        equipR @aetherhammer2@
      ?foe.distance < 10 & foe.armor < 1
      ^& bar_on_cd() & ham_on_cd()
        equipL @aethersword1@
        equipR @aethersword2@
      ?foe.time = 210
        equip aether crossbow
    :?foe.state = 32 & foe.time = 25
      equipL mind
    :
      equip aether crossbow
  :?foe.state = 32 & foe.time = 200
    equip aether crossbow
  :?foe.distance < 17
  ^& foe.GetCount(15) >= 3
    equipL @icewand1@
    equipR @icewand2@
  :?foe = bomb & foe.distance < 5
    equipL mind
  :?foe ! boss & armor > 40
    equipL @aethersword1@
    equipR @aethersword2@
  :
    equipL @aethersword1@
    equipR aether shield

?loc = halls & summon.count = 1
  ?foe.GetCount(15) >= 3 | foe = ghost
  ^& foe.distance <= 15
    equipL @icewand1@
    equipR @icewand2@
  :?foe = pallas
    ?foe.state = 2 & foe = legless
      activate potion
    ?foe.distance <= 7
      bardiche_use()
    ?bar_on_cd()
      equipL @vigorsword1@
      equipR @vigorsword2@
    ?foe.GetCount(15) >= 3 | foe = ghost
    ^& foe.distance <= 15
      equipL @icewand1@
      equipR @icewand2@
  :
    equipL @vigorsword1@
    equipR @vigorsword2@

?loc = forest & summon.count = 1
  ?foe.distance <= 15
    ?foe = puff & foe.distance < 5
      equipL mind
    :?foe = boss
      bardiche_use()
      ?bar_on_cd() & foe.distance <= 10
        equipL @vigorsword1@
        equipR @vigorsword2@
    :?foe.GetCount(15) >= 3
      equipL @icewand1@
      equipR @icewand2@
    :
      equipL @vigorsword1@
      equipR @vigorsword2@

?loc = caves & summon.count = 1
  ?foe = bolesh
    ?foe.state = 1
      activate potion
      equip ice crossbow
  :?foe = ceiling
    bardiche_use()
    ?foe.state = 2 & bar_on_cd()
    ^& item.GetCooldown(＂mind＂) <= 0
      equipL mind
      equipR @icesword1@
    :?bar_on_cd() & foe.distance < 10
      equipL @icesword1@
      equipR @icesword2@
  :?foe.GetCount(15) >= 3
    equipL @icewand1@
    equipR @icewand2@
  :
    equipL @icesword1@
    equipR ice shield
  

?loc = canyon & summon.count = 1
  ?foe = xyloalgia
    ?foe.state ! 32
      bardiche_use()
      ?bar_on_cd() & foe.distance <= 10
        equipL @vigorsword1@
        equipR @vigorsword2@
      :
        equipL @vigorsword1@
        equipR @vigorsword2@
    :?foe.state = 32 & foe.time = 30
      equipL mind
  :?foe = poena
    equipL @aetherhammer1@
    equipR @aetherhammer2@
  :?foe = wasp & foe.distance <= 15
    equipL @icewand1@
    equipR @icewand2@
  :?foe.distance <= 15
    equipL @vigorsword1@
    equipR @vigorsword2@
    ?foe.GetCount(15) >= 3
      equip skeleton arm
  :
