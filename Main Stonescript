var poisonsword1 = "poison sword +11"
var poisonsword2 = "poison sword +10"
var vigorsword1 = "vigor sword +10"
var vigorsword2 = "vigor sword +9"
var aethersword1 = "aether sword +10"
var aethersword2 = "aether sword +9"
var firesword1 = "fire sword +15"
var firesword2 = "fire sword +14"
var icesword1 = "ice sword +10"
var icesword2 = "ice sword +9"
var aetherhammer1 = "aether hammer +10"
var aetherhammer2 = "aether hammer +9"
var icewand1 = "ice wand +15"
var icewand2 = "ice wand +13"
var regenshield1 = "compound shield +15"
var regenshield2 = "compound shield +14"

var sword1 = sword1_ele_check()
var sword2 = sword2_ele_check()

func sword1_ele_check()
  ?foe = poison
    return "icesword1"
  :?foe = vigor
    return "poisonsword1"
  :?foe = aether
    return "vigorsword1"
  :?foe = fire
    return "aethersword1"
  :?foe = ice
    return "firesword1"
  :
    return "vigorsword1"

func sword2_ele_check()
  ?foe = poison
    return "icesword2"
  :?foe = vigor
    return "poisonsword2"
  :?foe = aether
    return "vigorsword2"
  :?foe = fire
    return "aethersword2"
  :?foe = ice
    return "firesword2"
  :
    return "vigorsword2"

